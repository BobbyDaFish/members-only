<h1>All Posts</h1>
<% unless member_signed_in? %>
  <div>To see who is posting, you must sign in!</div>
<% end %>
<% if member_signed_in?%>
  <%= button_to "Sign out", destroy_member_session_path, method: :delete %>
  <%= button_to "Create Post", new_post_path, method: :get %>
<% else %>
  <%= button_to "Sign in", new_member_session_path %>
<% end %>
<ul>
  <% @posts.each do |post| %>
    <li>
      <% if member_signed_in? %>
        <div><%= 'Posted by: ' + post.member.displayname %></div>
        <br>
      <% end %>
      <p><%= post.content %></p>
    </li>
  <% end %>
</ul>